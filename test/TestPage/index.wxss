page {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-content: center;

    height: 100vh;
}

.content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-content: center;
}

.content__avatar{
    width: 200rpx;
    height: 200rpx;
    border-radius: 200rpx;
    overflow: hidden;
}

.content__title {
    margin-top: 40rpx;
    font-size: 30rpx;
    font-weight: 500;
    text-align: center;
}

.description {
    position: fixed;

    bottom:20rpx;
    left: 50%;
    transform: translate(-50%, 0);

    font-size: 26rpx;
    color: lightgray;
    text-decoration: underline;
}